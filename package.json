{
  "name": "rpg-sheet-dot-games",
  "private": false,
  "author": "<troychryssos@gmail.com>",
  "description": "An online TTRPG character sheet compendium",
  "license": "MIT",
  "homepage": "https://rpgsheet.games/",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:serve": "yarn build && yarn next start -p 3003",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest",
    "lint": "next lint && yarn lint:prune",
    "lint:prune": "! ts-prune -i src/pages/* | grep -v -e 'used in module' -e src/pages",
    "prisma:migrate:dev": "prisma migrate dev --name",
    "prisma:migrate": "prisma migrate deploy"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^1.9.1",
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/base": "^5.0.0-alpha.116",
    "@prisma/client": "^4.1.0",
    "@types/lodash.sample": "^4.2.7",
    "clipboard-copy": "^4.0.1",
    "downshift": "^6.1.7",
    "lodash.camelcase": "^4.3.0",
    "lodash.capitalize": "^4.2.1",
    "lodash.debounce": "^4.0.8",
    "lodash.sample": "^4.2.1",
    "lodash.set": "^4.3.2",
    "lodash.sortby": "^4.7.0",
    "lodash.startcase": "^4.4.0",
    "next": "^13.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.25.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@emotion/babel-plugin": "^11.2.0",
    "@emotion/eslint-plugin": "^11.2.0",
    "@storybook/addon-actions": "^6.3.2",
    "@storybook/addon-docs": "^6.3.2",
    "@storybook/addon-essentials": "^6.3.2",
    "@storybook/addon-links": "^6.3.2",
    "@storybook/react": "^6.3.2",
    "@testing-library/react": "^12.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/lodash.capitalize": "^4.2.6",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.set": "^4.3.6",
    "@types/lodash.sortby": "^4.7.6",
    "@types/lodash.startcase": "^4.4.6",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "babel-loader": "^8.2.2",
    "eslint": "^8.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^13.1.6",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^10.5.4",
    "prettier": "2.8.3",
    "prisma": "^4.1.0",
    "ts-prune": "^0.10.3",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
