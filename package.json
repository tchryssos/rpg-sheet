{
  "name": "rpg-sheet-dot-games",
  "private": false,
  "author": "<troychryssos@gmail.com>",
  "description": "An online TTRPG character sheet compendium",
  "license": "MIT",
  "homepage": "https://rpgsheet.games/",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:serve": "yarn build && yarn next start -p 3003",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest",
    "lint": "next lint && yarn lint:prune",
    "lint:prune": "! ts-prune -i src/pages/* -i src/logic/tests/* | grep -v -e 'used in module' -e src/pages",
    "prisma:migrate:dev": "prisma migrate dev --name",
    "prisma:migrate": "prisma migrate deploy"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^1.9.1",
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.6",
    "@mui/base": "^5.0.0-alpha.116",
    "@prisma/client": "^4.11.0",
    "clipboard-copy": "^4.0.1",
    "date-fns": "^2.29.3",
    "dompurify": "^3.0.1",
    "downshift": "^6.1.7",
    "lodash": "^4.17.21",
    "next": "^13.1.6",
    "next-superjson-plugin": "^0.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.25.0",
    "superjson": "^1.12.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.2.0",
    "@storybook/addon-actions": "^6.3.2",
    "@storybook/addon-docs": "^6.3.2",
    "@storybook/addon-essentials": "^6.3.2",
    "@storybook/addon-links": "^6.3.2",
    "@storybook/react": "^6.3.2",
    "@testing-library/react": "^14.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/dompurify": "^2.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "csstype": "^3.1.1",
    "eslint": "^8.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^13.1.6",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^10.5.4",
    "prettier": "2.8.3",
    "prisma": "^4.11.0",
    "ts-prune": "^0.10.3",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
