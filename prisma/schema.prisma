generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id             Int         @id @default(autoincrement())
  createdOn      DateTime    @db.Timestamp(6)
  lastModifiedOn DateTime    @db.Timestamp(6)
  authId         String      @unique
  role           String
  characters     character[]
  // gmCampaigns     campaign[]  @relation("gm")
  // playerCampaigns campaign[]  @relation("players")
}

model rulebook {
  id             Int         @id @default(autoincrement())
  createdOn      DateTime    @db.Timestamp(6)
  lastModifiedOn DateTime    @db.Timestamp(6)
  name           String
  description    String?
  // campaigns      campaign[]
  characters     character[]
}

